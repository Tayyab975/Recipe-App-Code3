<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recipeapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/recipeappicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/recipeappicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipeApp">

        <activity android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />

        <!-- Other activities for dish details -->
        <activity android:name=".DishDetailActivity" />
        <activity android:name=".Dish2DetailActivity" />
        <activity android:name=".Dish3DetailActivity" />
        <activity android:name=".Dish4DetailActivity" />

    </application>

</manifest>
